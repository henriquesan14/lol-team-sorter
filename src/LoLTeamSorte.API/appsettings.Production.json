    "Br1UrlBase": "https://br1.api.riotgames.com",
    "DDragonUrlBase": "https://ddragon.leagueoflegends.com",
    "ApiKey": "${RIOT_API_KEY}"
  },
  "TokenSettings": {
    "Secret": "${JWT_SECRET}"
  }
}
